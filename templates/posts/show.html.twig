{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<h1>Posts</h1>
{% if user is defined %}{{user}}{% endif %}
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ post.author }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ post.content }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Updated_at</th>
            <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('posts_index') }}"><button>back to list</button></a><br>
{% if user is defined %}
<a href="{{ path('comments_new', {'id': post.id}) }}"><button>add comments</button></a><br>
{% endif %}
{% if token is defined %} 
    <a href="{{ path('posts_edit', {'id': post.id}) }}"><button>edit</button></a>
    {{ include('posts/_delete_form.html.twig') }}
{% endif %}
{% for comment in comments %}
<p>{{ comment.content }}</p>
<h5>{{ comment.author }}</h5>
{% endfor %}
{% endblock %}
